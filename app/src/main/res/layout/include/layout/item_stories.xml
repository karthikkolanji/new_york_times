<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myApp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cvRoot"
    android:elevation="10dp"
    myApp:cardCornerRadius="4dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="@color/colorWhite"
        android:paddingBottom="8dp">

        <ImageView
            android:id="@+id/ivThumb"
            android:layout_width="0dp"
            android:layout_height="214dp"
            android:src="@drawable/common_full_open_on_phone"
            myApp:layout_constraintDimensionRatio="w,16:9"
            myApp:layout_constraintLeft_toLeftOf="parent"
            myApp:layout_constraintRight_toRightOf="parent"
            myApp:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvArticleTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/tv_large"
            myApp:layout_constraintLeft_toLeftOf="parent"
            myApp:layout_constraintRight_toRightOf="parent"
            myApp:layout_constraintTop_toBottomOf="@+id/ivThumb"
            tools:text="bcjhdsvjdhsvdshvsjdvsdj" />


        <TextView
            android:id="@+id/tvAuthorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/tv_small"
            myApp:layout_constraintLeft_toLeftOf="@+id/tvArticleTitle"
            myApp:layout_constraintRight_toRightOf="@+id/tvArticleTitle"
            myApp:layout_constraintTop_toBottomOf="@+id/tvArticleTitle"
            tools:text="bcjhdsvjdhsvdshvsjdvsdj" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>